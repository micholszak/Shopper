<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_navigation"
    app:startDestination="@id/todo_list">

    <fragment
        android:id="@+id/todo_list"
        android:name="pl.olszak.todo.feature.todos.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list">

        <action
            android:id="@+id/action_add_todo"
            app:destination="@+id/add_todo" />
    </fragment>

    <dialog
        android:id="@+id/add_todo"
        android:name="pl.olszak.todo.feature.add.AddTodoFragment"
        android:label="fragment_add_todo"
        tools:layout="@layout/fragment_add_todo_sheet" />

</navigation>